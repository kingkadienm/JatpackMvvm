<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomDialogAnimation" parent="android:style/Theme.Dialog">

        <item name="android:windowEnterAnimation">@anim/push_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="BottomPopAnim">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <!-- dialog默认主题 -->
    <style name="dialog_default_theme" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否悬浮于Activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--背景透明的Dialog样式-->
    <style name="dialog_translucent_theme" parent="dialog_default_theme">
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--可捕获超链接点击的TextView-->
    <declare-styleable name="CashLinkClickTextView">
        <attr name="showUnderLine" format="boolean" />
        <attr name="linkColor" format="reference|color" />
    </declare-styleable>
</resources>